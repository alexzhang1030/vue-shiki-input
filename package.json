{
  "name": "vue-shiki-input",
  "type": "module",
  "version": "2.0.1",
  "packageManager": "pnpm@10.26.0",
  "description": "A Shiki input component for Vue.",
  "author": "alexzhang1030",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexzhang1030/vue-shiki-input.git"
  },
  "keywords": [
    "shiki",
    "input",
    "shiki input",
    "vue"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./style.css": "./dist/style.css"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint .",
    "prepare": "simple-git-hooks",
    "dev": "vite build --watch",
    "build": "vite build",
    "play": "pnpm -F playground dev",
    "prepublishOnly": "pnpm run build",
    "release": "bumpp --commit \"chore: release v%s\" --push --tag && pnpm publish",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "peerDependencies": {
    "@vueuse/core": ">=9.0.0",
    "shiki": ">=3.0.0",
    "vue": ">=3.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.1",
    "@iconify-json/carbon": "^1.2.15",
    "@iconify-json/svg-spinners": "^1.2.4",
    "@unocss/reset": "^66.5.10",
    "@vitejs/plugin-vue-jsx": "^5.1.2",
    "baseline-browser-mapping": "^2.9.7",
    "bumpp": "^10.3.2",
    "eslint": "^9.39.2",
    "lint-staged": "^16.2.7",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3",
    "unocss": "^66.5.10",
    "unplugin-vue-components": "^30.0.0",
    "vite": "^7.3.0",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^6.0.1",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.15"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "eslint --fix"
    ]
  }
}
