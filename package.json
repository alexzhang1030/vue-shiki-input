{
  "name": "vue-shiki-input",
  "type": "module",
  "version": "2.0.1",
  "packageManager": "pnpm@9.11.0",
  "description": "A Shiki input component for Vue.",
  "author": "alexzhang1030",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexzhang1030/vue-shiki-input.git"
  },
  "keywords": [
    "shiki",
    "input",
    "shiki input",
    "vue"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./style.css": "./dist/style.css"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint .",
    "prepare": "simple-git-hooks",
    "dev": "vite build --watch",
    "build": "vite build",
    "play": "pnpm -F playground dev",
    "prepublishOnly": "pnpm run build",
    "release": "bumpp --commit \"chore: release v%s\" --push --tag && pnpm publish",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "peerDependencies": {
    "@vueuse/core": ">=9.0.0",
    "shiki": ">=1.9.0",
    "vue": ">=3.2.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.27.3",
    "@iconify-json/carbon": "^1.2.1",
    "@iconify-json/svg-spinners": "^1.2.0",
    "@unocss/reset": "^0.62.4",
    "@vitejs/plugin-vue-jsx": "^4.0.1",
    "bumpp": "^9.5.2",
    "eslint": "npm:eslint-ts-patch@8.56.0-0",
    "eslint-ts-patch": "8.56.0-0",
    "lint-staged": "^15.2.10",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.6.2",
    "unocss": "^0.62.4",
    "unplugin-vue-components": "^0.27.4",
    "vite": "^5.4.7",
    "vite-plugin-dts": "^4.2.3",
    "vite-tsconfig-paths": "^4.3.2",
    "vitepress": "^1.3.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "eslint --fix"
    ]
  }
}
